<div class="hero-section" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(@list.picture.key, crop: :fill) %>')">
  <h1><%= @list.name %></h1>
</div>


<div class="container mt-3">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>

  <div class="movies-cards">

    <% @list.bookmarks.each do |b| %>
      <div class="movie-card">
        <div class="movie-card-img">
          <img src="<%= b.movie.poster_url %>" alt="">
        </div>
        <div class="movie-card-top">
          <span><%= b.movie.title %></span>
          <span><%= b.movie.rating %></span>
        </div>
        <div class="movie-card-overview">
          <p><%= b.movie.overview %></p>
          <span><%= b.comment %></span>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to all lists", lists_path %>
</div>
